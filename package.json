{
  "name": "dash-archive",
  "description": "Intelligent, privacy-focused file organizer powered by local AI",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "author": "roketag33",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roketag33/DashArchive.git"
  },
  "bugs": {
    "url": "https://github.com/roketag33/DashArchive/issues"
  },
  "keywords": [
    "electron",
    "react",
    "ai",
    "local-first",
    "file-organizer",
    "privacy"
  ],
  "homepage": "https://github.com/roketag33/DashArchive#readme",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:all": "vitest run && playwright test",
    "build": "yarn typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "yarn build && electron-builder --dir",
    "build:win": "yarn build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "prepare": "husky"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.5.0",
    "chokidar": "3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "i18next": "^25.7.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.556.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "pdf-parse": "^2.4.5",
    "react-i18next": "^16.4.1",
    "react-router-dom": "^7.10.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tesseract.js": "^6.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "1.0.1",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.19.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "drizzle-kit": "^0.31.8",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "2.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "5.4.8",
    "vitest": "^4.0.15"
  }
}
